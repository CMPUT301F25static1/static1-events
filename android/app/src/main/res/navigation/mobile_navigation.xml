<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_profile">

    <action
        android:id="@+id/action_mainActivity_to_eventDetails"
        app:destination="@id/navigation_event_details" />

    <!-- EVENTS -->
    <fragment
        android:id="@+id/navigation_events"
        android:name="com.static1.fishylottery.view.events.EventsFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_events">

        <action
            android:id="@+id/action_hostedEvents_to_createEvent"
            app:destination="@id/navigation_create_event" />

        <action
            android:id="@+id/action_hostedEvents_to_hostedEventDetails"
            app:destination="@id/navigation_hosted_event_details" />

        <action
            android:id="@+id/action_events_to_eventDetails"
            app:destination="@id/navigation_event_details" />
    </fragment>

    <!-- ✅ NOTIFICATIONS LIST -->
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.static1.fishylottery.view.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">

        <!-- ✅ ACTION → DETAIL SCREEN -->
        <action
            android:id="@+id/action_navigation_notifications_to_notificationDetailFragment"
            app:destination="@id/notificationDetailFragment" />
    </fragment>

    <!-- ✅ NOTIFICATION DETAIL SCREEN -->
    <fragment
        android:id="@+id/notificationDetailFragment"
        android:name="com.static1.fishylottery.view.notifications.NotificationDetailFragment"
        android:label="Notification Detail"
        tools:layout="@layout/fragment_notification_detail" />

    <!-- PROFILE -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.static1.fishylottery.view.profile.ProfileContainerFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile_container">

        <action
            android:id="@+id/action_profile_to_edit_profile"
            app:destination="@id/navigation_edit_profile" />
    </fragment>

    <!-- CREATE EVENT -->
    <fragment
        android:id="@+id/navigation_create_event"
        android:name="com.static1.fishylottery.view.events.CreateEventDetailsFragment"
        android:label="1 of 3: Event Details"
        tools:layout="@layout/fragment_create_event_details">

        <action
            android:id="@+id/action_eventDetails_to_eventPoster"
            app:destination="@id/navigation_create_event_poster" />
    </fragment>

    <fragment
        android:id="@+id/navigation_create_event_poster"
        android:name="com.static1.fishylottery.view.events.CreateEventPosterFragment"
        android:label="2 of 3: Event Poster"
        tools:layout="@layout/fragment_create_event_poster">

        <action
            android:id="@+id/action_eventPoster_to_eventPreview"
            app:destination="@id/navigation_create_event_preview" />
    </fragment>

    <fragment
        android:id="@+id/navigation_create_event_preview"
        android:name="com.static1.fishylottery.view.events.CreateEventPreviewFragment"
        android:label="3 of 3: Event Preview" />

    <!-- EDIT PROFILE -->
    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.static1.fishylottery.view.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <!-- HOSTED EVENT DETAILS -->
    <fragment
        android:id="@+id/navigation_hosted_event_details"
        android:name="com.static1.fishylottery.view.events.hosted.HostedEventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_hosted_event_details">

        <action
            android:id="@+id/action_hostedEventDetails_to_hostedEventDetailsWaitlist"
            app:destination="@id/navigation_hosted_event_details_waitlist" />

        <action
            android:id="@+id/action_hostedEventsDetails_to_hostedEventDetailsSendNotifications"
            app:destination="@id/navigation_hosted_event_send_notifications" />

        <action
            android:id="@+id/action_hostedEventDetails_to_signupMap"
            app:destination="@id/navigation_signup_map" />

        <action
            android:id="@+id/action_hostedEventDetails_to_viewQrCode"
            app:destination="@id/navigation_view_qr_code" />

        <!-- NEW: Cancelled Entrants -->
        <action
            android:id="@+id/action_hostedEventDetails_to_cancelledEntrants"
            app:destination="@id/navigation_cancelled_entrants" />
    </fragment>

    <fragment
        android:id="@+id/navigation_hosted_event_details_waitlist"
        android:name="com.static1.fishylottery.view.events.hosted.WaitlistFragment"
        android:label="Waitlist"
        tools:layout="@layout/fragment_waitlist" />

    <fragment
        android:id="@+id/navigation_hosted_event_send_notifications"
        android:name="com.static1.fishylottery.view.events.hosted.SendNotificationsFragment"
        android:label="Send Notifications"
        tools:layout="@layout/fragment_send_notifications" />

    <fragment
        android:id="@+id/navigation_signup_map"
        android:name="com.static1.fishylottery.view.events.hosted.SignupMapFragment"
        android:label="Signup Map"
        tools:layout="@layout/fragment_signup_map" />

    <fragment
        android:id="@+id/navigation_event_details"
        android:name="com.static1.fishylottery.view.events.EventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details" />

    <fragment
        android:id="@+id/navigation_view_qr_code"
        android:name="com.static1.fishylottery.view.events.hosted.ViewQrCodeFragment"
        android:label="Event QR Code"
        tools:layout="@layout/fragment_view_qr_code" />

    <!-- NEW DESTINATION: Cancelled Entrants -->
    <fragment
        android:id="@+id/navigation_cancelled_entrants"
        android:name="com.static1.fishylottery.view.events.hosted.CancelledEntrantsFragment"
        android:label="Cancelled Entrants"
        tools:layout="@layout/fragment_cancelled_entrants" />

</navigation>

