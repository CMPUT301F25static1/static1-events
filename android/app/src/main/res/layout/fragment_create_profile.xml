<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="114dp"
            android:layout_height="102dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/fishlogo" />

        <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Fishy Lottery"
            android:textColor="#003333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/text_create_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Profile"
            android:textColor="#006666"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please create a profile to use the app"
            android:textColor="#808080"
            android:textSize="13sp"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/round_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/create_user_name"/>

                <EditText
                    android:id="@+id/edit_text_first_name"
                    android:layout_width="333dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint=" First Name"
                    android:inputType="textPersonName"
                    android:textColor="#333"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/round_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/create_user_name"/>

                <EditText
                    android:id="@+id/edit_text_last_name"
                    android:layout_width="333dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint=" Last Name"
                    android:inputType="textPersonName"
                    android:textColor="#333"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/round_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/create_user_email"/>

                <EditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="333dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint=" E-mail"
                    android:inputType="textEmailAddress"
                    android:textColor="#333"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/round_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/create_user_phone" />

                <EditText
                    android:id="@+id/edit_text_phone"
                    android:layout_width="333dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint=" Phone (optional)"
                    android:inputType="phone"
                    android:textColor="#333"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SIGN UP"
            android:layout_marginTop="15dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
