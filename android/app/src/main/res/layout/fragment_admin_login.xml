<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_5"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="269dp"
        android:layout_height="349dp"
        android:layout_margin="16dp"
        android:backgroundTint="#00000000"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="339dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:textColor="#6B7280"
                android:textSize="14sp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:text="Restricted access – admins only"
                android:textColor="#6B7280"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="89dp"
                android:layout_height="41dp"
                app:srcCompat="@drawable/img_4" />

            <!-- Passcode -->
            <LinearLayout
                android:layout_width="223dp"
                android:layout_height="35dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="5dp"
                android:background="#023E8A"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/lock" />

                <EditText
                    android:id="@+id/edit_text_passcode"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Enter Code"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:textColor="#1E293B"
                    android:textSize="15dp"
                    android:textColorHint="#9CA3AF" />

            </LinearLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/button_login"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#0096FF"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/systemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Secure • Ready"
                android:textColor="#00E5FF"
                android:textSize="12sp"
                android:alpha="0.7"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 Secure Access System"
                android:textColor="#4D9FFF"
                android:textSize="11sp"
                android:layout_marginTop="16dp"
                android:alpha="0.5"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>