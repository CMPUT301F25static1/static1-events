<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <FrameLayout
                android:id="@+id/image_profile_placeholder"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@drawable/circle_background_light_blue">

                <TextView
                    android:id="@+id/text_initials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CM"
                    android:textColor="@color/teal_700"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:paddingVertical="8dp">

            <include layout="@layout/item_selectable_row"
                android:id="@+id/row_edit_profile"
                android:tag="Edit Profile" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

            <include layout="@layout/item_selectable_row"
                android:id="@+id/row_notifications"
                android:tag="Notifications" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

            <include layout="@layout/item_selectable_row"
                android:id="@+id/row_event_history"
                android:tag="Event History" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

            <include layout="@layout/item_selectable_row"
                android:id="@+id/row_admin_login"
                android:tag="Admin Login" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                android:text="Donâ€™t let your luck swim away."
                android:textColor="@color/teal_700"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>